@model TiendaVirtualMVC.Web.Areas.Administracion.Models.EditarProductoViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm("Editar", "Productos",
    FormMethod.Post, new { enctype = "multipart/form-data" }))
{

        <div class="editor-label">
            @Html.LabelFor(model => model.Nombre)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Nombre)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Precio)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Precio)
        </div>

        <div class="editor-label">
            @Html.Label("CategoriaId", "Categoria")
        </div>
        <div class="editor-field">
            @Html.DropDownList("CategoriaId", Model.Categorias)
        </div>
    
        if (Model.TieneImagen)
        {
             <img src="@Url.Action("imagen", "home", new { area = "", id = Model.Id })"
                  alt="@Model.Nombre"/>
        }
        
        <input type="file" name="archivo" value="Imagen" />
        @Html.HiddenFor(model => model.Id)

        <p>
            <input type="submit" value="Save" />
        </p>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
